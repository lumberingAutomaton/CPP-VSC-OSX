{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "g++",
    "isShellCommand": true,
    "showOutput": "never",
    "tasks" : [{
        "taskName" : "debug",
        "args": ["-g", "main.cpp"],
        "suppressTaskName": true
    },
    {
        "taskName" : "compile",
        "isBuildCommand": true,
        "args": ["-o", "main", "main.cpp"],
        "suppressTaskName": true
    }]
}